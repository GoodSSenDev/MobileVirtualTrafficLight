<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirutalTrafficMobile.MainPage">

    <StackLayout>
        <Ellipse 
            Fill ="Red"
            WidthRequest="350"
            HeightRequest="350"
            HorizontalOptions="Center"/>
        <Switch   
            OnColor="Orange"
            ScaleX="3"
            ScaleY="3"
            ThumbColor="Green" 
            HorizontalOptions="Center"
            Margin="0,50,0,0"/>
        <Label Margin="0,50,0,0">
            Sent message
        </Label>
        <Label Margin="0,50,0,0">
            Received message
        </Label>
    </StackLayout>

</ContentPage>
