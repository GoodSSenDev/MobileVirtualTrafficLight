<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:VirutalTrafficMobile.ViewModels"
             x:Class="VirutalTrafficMobile.MainPage">
    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>
    <StackLayout>
        <Ellipse 
            Fill ="{Binding CircleColour, Mode=TwoWay}"
            WidthRequest="350"
            HeightRequest="350"
            HorizontalOptions="Center"/>
        <Switch   
            IsToggled="{Binding IsSwitchOn, Mode=TwoWay}"
            OnColor="Orange"
            ScaleX="3"
            ScaleY="3"
            ThumbColor="Green" 
            HorizontalOptions="Center"
            Margin="0,50,0,0"/>

        <Label 
            Margin="0,50,0,0"
            Text="{Binding ReceivedMessage, Mode=TwoWay}"/>

    </StackLayout>

</ContentPage>
